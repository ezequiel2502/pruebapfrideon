<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E0E0E0">

    <!-- CircleImageView -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp" />

    <!-- LinearLayout para el comentario -->
    <LinearLayout
        android:id="@+id/linearLayoutComentario"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/image_profile"
        android:layout_toRightOf="@id/image_profile"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_userNameComentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_commentComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="5"
            android:textSize="14sp"
            android:textColor="#333333" />

        <!-- Botones "Responder" y "Eliminar" uno al lado del otro -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Botón "Responder" -->
            <Button
                android:id="@+id/btn_reply"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:text="Responder"
                android:textColor="@color/design_default_color_primary"
                android:textSize="10sp" />

            <!-- Botón "Eliminar" -->
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Eliminar"
                android:textColor="@color/design_default_color_primary"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- LinearLayout para la respuesta -->
    <LinearLayout
        android:id="@+id/linearLayoutRespuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutComentario"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#9E9E9E">

        <!-- CircleImageView para la respuesta -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profileRespuesta"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_userNameRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_commentRespuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="5"
                android:textSize="14sp"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Botón "Eliminar" para la respuesta -->
        <Button
            android:id="@+id/btn_deleteRespuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Eliminar"
            android:textColor="@color/design_default_color_primary"
            android:textSize="10sp" />
    </LinearLayout>
    </RelativeLayout>
