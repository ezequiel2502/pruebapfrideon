                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="6dp">


                <!-- TextView adicional "Ruta" en negro -->

                <!--<ImageButton
                    android:id="@+id/previewRoute"
                    android:layout_width="24dp"
